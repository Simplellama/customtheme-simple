              </svg>
            </a>
          </div>
        </div>
      </div>
    {% if section.settings.image != blank %}<img width="500" class="order-0 md:order-1 w-full mx-auto max-w-[130px] mb-4 md:mt-6 md:mb-0 block lg:max-w-[400px]" src="{{ section.settings.image | image_url: width: 800 }}"  />{% endif %}
  </div>
</div>

{% schema %}
  { 
    "name": "Klaviyo form", 
    "settings": [
      {
        "type": "text",
        "id": "heading", 
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading"
      },
      {
        "type": "text",
        "id": "prize_value",
        "label": "Prize value"
      },
      {
        "type": "text",
        "id": "after_highlight",
        "label": "Text after highlight"
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Description",
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "form",
        "label": "Form ID",
        "info": "Klaviyo form ID"
      },
      {
        "type": "url",
        "id": "facebook_url",
        "label": "Facebook URL"
      },
      {
        "type": "url",
        "id": "instagram_url",
        "label": "Instagram URL"
      }
    ],
    "presets": [
      {
        "name": "Klaviyo form",
        "settings": {
          "heading": "",
          "subheading": ""
        }
      }
    ]
  }
{% endschema %}
