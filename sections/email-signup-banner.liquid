  <div class="relative flex flex-col items-center z-10 max-w-full">
      <div class="order-1 md:order-0">
        {% if section.settings.heading != blank %}<h1 class="text-7xl lg:text-8xl font-bold text-center mb-8 text-primary-bg">{{ section.settings.heading }}</h1>{% endif %}
        {% if section.settings.subheading != blank %}<p class="text-center text-2xl lg:text-3xl font-bold mb-8 mt-1 lg:mt-2 text-primary-bg">{{ section.settings.subheading }} <span class="text-primary-orange text-3xl lg:text-4xl px-1">{{ section.settings.prize_value }}</span>{% if section.settings.after_highlight %}<span>{{ section.settings.after_highlight }}</span>{% endif %}</p>{% endif %}
