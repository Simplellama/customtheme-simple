  {
    "name": "Footer",
    "settings": [
      { "type": "image_picker", "id": "logo_image", "label": "Logo" },
      { "type": "text", "id": "newsletter_subtitle", "label": "Newsletter subtitle" },
      { "type": "text", "id": "newsletter_title", "label": "Newsletter title" },
      { "type": "text", "id": "newsletter_bullet_1", "label": "Newsletter bullet 1" },
      { "type": "text", "id": "newsletter_bullet_2", "label": "Newsletter bullet 2" },
      { "type": "text", "id": "newsletter_bullet_3", "label": "Newsletter bullet 3" },
      { "type": "text", "id": "shop_title", "label": "Shop title" },
      { "type": "text", "id": "support_title", "label": "Support title" },
      { "type": "text", "id": "information_title", "label": "Information title" },
      { "type": "text", "id": "contact_title", "label": "Contact title" },
      { "type": "text", "id": "contact_phone", "label": "Contact phone" },
      { "type": "text", "id": "contact_email", "label": "Contact email" },
      { "type": "text", "id": "contact_hours_weekdays", "label": "Contact hours (weekdays)" },
      { "type": "text", "id": "contact_hours_weekend", "label": "Contact hours (weekend)" },
