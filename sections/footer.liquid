<footer class="bg-secondary-bg relative overflow-hidden">

  <div class="z-10 relative">

    

    <div class="border-t border-primary-black  xl:grid xl:grid-cols-5 xl:gap-8">
      <div class="col-span-2 px-4 pt-6 bg-secondary-bg flex flex-col items-center justify-center">
    
      <div class="flex flex-col gap-y-2 pb-4 w-full">
  <p class="text-lg/7 font-bold uppercase text-primary-orange">{{ section.settings.newsletter_subtitle }}</p>
  <h3 class="Heading tracking-tight text-5xl/tight sm:text-7xl/tight font-bold text-primary-text">{{ section.settings.newsletter_title }}</h3>
        <ul class="flex flex-col gap-y-2 py-4">
          {% if section.settings.newsletter_bullet_1 != blank %}
            <li class="font-semibold flex gap-x-2">{% render 'icon', icon: 'check', size: 20, fill: 'black' %}{{ section.settings.newsletter_bullet_1 }}</li>
          {% endif %}
          {% if section.settings.newsletter_bullet_2 != blank %}
            <li class="font-semibold flex gap-x-2">{% render 'icon', icon: 'check', size: 20, fill: 'black' %}{{ section.settings.newsletter_bullet_2 }}</li>
          {% endif %}
          {% if section.settings.newsletter_bullet_3 != blank %}
            <li class="font-semibold flex gap-x-2">{% render 'icon', icon: 'check', size: 20, fill: 'black' %}{{ section.settings.newsletter_bullet_3 }}</li>
          {% endif %}
        </ul>
        <div class="klaviyo-form-RPkinZ"></div>
      </div>
  
      </div>
      <div class="relative mt-16 grid grid-cols-2 gap-8 xl:col-span-3 xl:mt-0 bg-primary-black px-6 md:px-14  pt-12 md:pt-20 pb-56">
        <div class="grid grid-cols-1 md:gap-12 lg:pl-20">
          <div>
            <h3 class="text-xl/6 Heading font-bold text-white">{{ section.settings.shop_title }}</h3>
            <ul role="list" class="mt-6 space-y-4">
              {% for link in linklists.footer_shop.links %} 
                <li>
                  <a href="{{ link.url }}" class="text-base/6 text-white hover:text-primary-orange">{{ link.title }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
          <div class="mt-10">
            <h3 class="text-xl/6 Heading font-bold text-white">{{ section.settings.support_title }}</h3>
            <ul role="list" class="mt-6 space-y-4">
              {% for link in linklists.footer_support.links %} 
                <li>
                  <a href="{{ link.url }}" class="text-base/6 text-white hover:text-primary-orange">{{ link.title }}</a>
                </li>
              {% endfor %}
            </ul>
          </div>
        </div>
        <div class="grid grid-cols-1 md:gap-12">
          <div>
            <h3 class="text-xl/6 Heading font-bold text-white">{{ section.settings.information_title }}</h3>
            <ul role="list" class="mt-6 space-y-4">
              {% for link in linklists.footer_information.links %} 
                <li>
                  <a href="{{ link.url }}" class="text-base/6 text-white hover:text-primary-orange">{{ link.title }}</a>
                </li>
              {% endfor %}                  
            </ul>
          </div>
        <div class="mt-10">

          <h3 class="text-xl/6 Heading font-bold text-white">{{ section.settings.contact_title }}</h3>
          <ul role="list" class="mt-6 space-y-4">
            <li>
              <a href="tel:{{ section.settings.contact_phone }}" class="text-base/6 text-white hover:text-primary-orange">{{ section.settings.contact_phone }}</a>
            </li>
            <li>
              <a href="mailto:{{ section.settings.contact_email }}" class="text-base/6 text-white hover:text-primary-orange">{{ section.settings.contact_email }}</a>
            </li>
            <li>
              <span class="text-base/6 text-white hover:text-primary-orange">{{ section.settings.contact_hours_weekdays }}</span>
            </li>
            <li>
              <span class="text-base/6 text-white hover:text-primary-orange">{{ section.settings.contact_hours_weekend }}</span>
            </li>
            <li>
              <span class="text-base/6 text-white hover:text-primary-orange">{{ section.settings.contact_hours_holidays }}</span>
            </li>
          </ul>
    
        </div>
        </div>
        {% if section.settings.logo_image != blank %}
          <a aria-label="logo" class="w-[150px] block absolute bottom-24 left-10 sm:left-32" href="/">
            {%- render 'icon', icon: 'tent', size: 85 -%}
          </a>
        {% endif %}
      </div>

    </div>

  </div>
  <div class="mx-auto h-[1px] bg-border w-full"></div>
  <div class="px-4 py-3 flex flex-col sm:flex-row gap-y-3 bg-primary-black justify-between sm:items-center w-full relative z-[9999999999999]">
  <div class="text-sm/6 text-white  md:mt-0">{{ section.settings.copyright }}</div>
    <ul>
      {% for link in linklists.footer-bottom.links %} 
        <li class="inline-block sm:ml-4">
          <a href="{{ link.url }}" class="text-xs/5 sm:text-sm/6 text-white hover:text-primary-orange">{{ link.title }}</a>
        </li>
      {% endfor %}
    </ul>

  </div>

</footer>


