{
    "name": "Information section", 
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "text",
            "id": "subtitle",
            "label": "Subtitle"
        },
        {
            "type": "url",
            "id": "url",
            "label": "Link"
        },
        {
            "type": "text",
            "id": "link_text",
            "label": "Link text"
        },
        {
            "type": "image_picker",
            "id": "background",
            "label": "Background image"
        }
    ],
    "blocks": [
        {
            "name": "Info panel",
            "type": "feature",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title"
                },
                {
                    "type": "richtext",
                    "id": "richtext",
                    "label": "Richtext"
                },
                {
                    "type": "image_picker",
                    "id": "icon",
                    "label": "Icon or image"
                },
                {
                    "type": "text",
                    "id": "button_text",
                    "label": "Button text"
                },
                {
