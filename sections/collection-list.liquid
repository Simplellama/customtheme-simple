<section class="h-full min-h-[100vh] py-8 bg-secondary-bg flex items-center">

  <div class="container flex flex-col justify-center gap-x-4 gap-y-4 w-full"> 

    <h3 class="font-regular text-2xl text-center mb-6 tracking-tight">{{ section.settings.title }}</h3>

    <div class="flex flex-wrap gap-x-2 sm:gap-x-8 gap-y-5 items-center justify-center text-center max-w-10xl mx-auto">
      {% for block in section.blocks %}
        <a class="Heading tracking-tight text-3xl md:text-9xl heading_bold flex gap-x-8 hover:opacity-60" href="{{ block.settings.url }}">{{ block.settings.title }}</a>{% unless forloop.last %}<p class="Heaing text-xl sm:text-7xl font-bold">/</p>{% endunless %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %} 
  {
    "name": "Collection list", 
    "settings": [ 
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Collection list"
      } 
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Heading",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Collection"
          },
          { 
            "type": "url",
            "id": "url",
            "label": "link" 
          }
        ]
      }
    ],
    "presets": [ 
      {
        "name": "Collection list",
        "category": "Collection",
        "settings": {
          "title": "Explore our brands"
        }
      }
    ]
  }
{% endschema %}
