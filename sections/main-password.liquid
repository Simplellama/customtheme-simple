{% comment %}
  Main Password Section
  This section is used for the password page and is customizable in the theme editor.
{% endcomment %}

<section class="password-section">
  <div class="password-section__content">
    <h1>{{ 'general.password_page.title' | t }}</h1>
    <p>{{ 'general.password_page.subtext' | t }}</p>
    <!-- Add more customizable content here as needed -->
  </div>
</section>

{% schema %}
{
  "name": "Password Page Main",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our store!"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "We are opening soon. Enter your email to get notified."
    }
  ]
}
{% endschema %}
