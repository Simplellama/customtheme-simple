<script>
  document.addEventListener('DOMContentLoaded', function() {
    let buttonThree = document.querySelector('.grid-button-three');
    let buttonFour = document.querySelector('.grid-button-four');

    function updateProductCardColumn(newColClass) {
      let gridItems = document.querySelectorAll('.grid__item');

      gridItems.forEach(function(item) {
        // Remove both potential column classes to avoid conflicts
        item.classList.remove('lg:col-span-3', 'lg:col-span-4');
        // Add the new column class
        item.classList.add(newColClass);
      });
    }
  
    // Add event listener for the button that sets column to 3 and height to 840px
    buttonThree.addEventListener('click', function() {
      updateProductCardColumn('lg:col-span-4');
    }); 
  
    // Add event listener for the button that sets column to 4 and height to 630px
    buttonFour.addEventListener('click', function() {
      updateProductCardColumn('lg:col-span-3');
    });
  });
</script>