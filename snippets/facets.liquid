<script defer>
  document.addEventListener('DOMContentLoaded', function() {
    const label = document.querySelector('.facet-filters__label');
    const buttonGroup = document.querySelector('.button-group');
    const buttons = document.querySelectorAll('.facet-filters__button');
    const closeButton = document.getElementById('close_sort');
  
    label.addEventListener('click', function() {
      buttonGroup.classList.toggle('hidden');
    });
  
    buttons.forEach(button => {
      button.addEventListener('click', function() {
        const sortByValue = this.getAttribute('data-value');
        const url = new URL(window.location.href);
        url.searchParams.set('sort_by', sortByValue);
  
        fetch(url.toString(), {
          headers: {
            'X-Requested-With': 'XMLHttpRequest'
          }
        })
        .then(response => response.text())
        .then(data => {
          const parser = new DOMParser();
          const doc = parser.parseFromString(data, 'text/html');
          const newContent = doc.querySelector('#product-grid');
          const currentContent = document.querySelector('#product-grid');
  
          if (newContent && currentContent) {
            currentContent.innerHTML = newContent.innerHTML;
          } else {
            console.error('Error: Content selector not found.');
          }
        })
        .catch(error => console.error('Error:', error));
      });
    });

    closeButton.addEventListener('click', function() {
      buttonGroup.classList.add('hidden');
    });
  });
</script>

